<Window x:Class="Gryzak.Views.OrderDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Gryzak.Models"
        xmlns:converters="clr-namespace:Gryzak.Converters"
        mc:Ignorable="d"
        Title="Szczegóły zamówienia"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="700"
        MinHeight="400"
        Icon="pack://application:,,,/gryzak_icon.png">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:GrossPriceConverter x:Key="GrossPriceConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding OrderId, StringFormat='Zamówienie: {0}'}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="{Binding CustomerName}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,3"/>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,1"
                                Visibility="{Binding CustomerCompany, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="Firma: " 
                                   FontSize="11" 
                                   Foreground="#E3F2FD"/>
                        <TextBlock Text="{Binding CustomerCompany}" 
                                   FontSize="11" 
                                   Foreground="#E3F2FD"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,1"
                                Visibility="{Binding CustomerNip, Converter={StaticResource StringToVisibilityConverter}}">
                        <TextBlock Text="NIP: " 
                                   FontSize="11" 
                                   Foreground="#E3F2FD"/>
                        <TextBlock Text="{Binding CustomerNip}" 
                                   FontSize="11" 
                                   Foreground="#E3F2FD"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" 
                            VerticalAlignment="Top"
                            Margin="20,0,0,0">
                    <TextBlock Text="{Binding OrderDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="#E3F2FD"
                               Margin="0,0,0,6"/>
                    <TextBlock FontSize="11" 
                               Foreground="#E3F2FD"
                               Visibility="{Binding CustomerAddress, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,2">
                        <Run Text="Adres: " Foreground="#BBDEFB"/>
                        <Run Text="{Binding CustomerAddress}" Foreground="#E3F2FD"/>
                    </TextBlock>
                    <TextBlock FontSize="11" 
                               Foreground="#E3F2FD"
                               Visibility="{Binding CustomerCountry, Converter={StaticResource StringToVisibilityConverter}}">
                        <Run Text="Kraj: " Foreground="#BBDEFB"/>
                        <Run Text="{Binding CustomerCountry}" Foreground="#E3F2FD"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista produktów -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek tabeli -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="10,8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="PLU" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Produkt" FontWeight="Bold"/>
                    <TextBlock Grid.Column="2" Text="Ilość" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Cena netto" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="Stawka podatku" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" Text="Podatek" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="6" Text="Cena brutto" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="7" Text="Wartość brutto" FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Lista produktów -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Product}">
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding ProductId}" HorizontalAlignment="Center" Foreground="#666"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding Model}" FontSize="11" Foreground="Gray" TextWrapping="Wrap">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Model}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Model}" Value="">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <ItemsControl ItemsSource="{Binding Options}" Margin="0,4,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type models:ProductOption}">
                                                        <TextBlock FontSize="11" Foreground="#666" Margin="0,1,0,0" TextWrapping="Wrap">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0}: {1}">
                                                                    <Binding Path="Name"/>
                                                                    <Binding Path="Value"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" HorizontalAlignment="Right">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Price"/>
                                                    <Binding Path="DataContext.Currency" RelativeSource="{RelativeSource FindAncestor, AncestorType=Window}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Grid.Column="4" Text="{Binding TaxRate}" HorizontalAlignment="Center" Foreground="#666"/>
                                        <TextBlock Grid.Column="5" HorizontalAlignment="Right" Foreground="#666">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Tax"/>
                                                    <Binding Path="DataContext.Currency" RelativeSource="{RelativeSource FindAncestor, AncestorType=Window}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Grid.Column="6" HorizontalAlignment="Right">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource GrossPriceConverter}">
                                                    <Binding Path="Price"/>
                                                    <Binding Path="Tax"/>
                                                    <Binding Path="DataContext.Currency" RelativeSource="{RelativeSource FindAncestor, AncestorType=Window}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <TextBlock Grid.Column="7" HorizontalAlignment="Right" FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="GrossTotal"/>
                                                    <Binding Path="DataContext.Currency" RelativeSource="{RelativeSource FindAncestor, AncestorType=Window}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Podsumowanie kolumn -->
                    <Border BorderBrush="#2196F3" BorderThickness="0,2,0,0" Background="#E3F2FD" Padding="10,8" Margin="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="RAZEM:" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1976D2"/>
                            <TextBlock Grid.Column="1" Text="" />
                            <TextBlock Grid.Column="2" Text="{Binding TotalQuantity}" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1976D2"/>
                            <TextBlock Grid.Column="3" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#1976D2">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="TotalPriceNet"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Grid.Column="4" Text="" />
                            <TextBlock Grid.Column="5" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#1976D2">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="TotalTax"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Grid.Column="6" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#1976D2">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="TotalPriceGross"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Grid.Column="7" HorizontalAlignment="Right" FontWeight="Bold" Foreground="#1976D2">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="TotalSumGross"/>
                                        <Binding Path="Currency"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Podsumowanie -->
        <Border Grid.Row="2" Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="1">
                    <ItemsControl ItemsSource="{Binding OrderTotals}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" BorderBrush="#2196F3" BorderThickness="0,0,0,1" Margin="0,8,0,0" Padding="0,0,0,0" Visibility="Collapsed">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <Grid Grid.Row="1" Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Title, StringFormat='{}{0}:'}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="FontWeight" Value="Normal"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                            <Setter Property="FontSize" Value="16"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="FormattedValue"/>
                                                    <Binding Path="DataContext.Currency" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDiscount}" Value="True">
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsTotal}" Value="True">
                                                            <Setter Property="Foreground" Value="#2196F3"/>
                                                            <Setter Property="FontSize" Value="16"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stopka z przyciskami -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Zamknij" 
                            IsDefault="True" 
                            Click="CloseButton_Click"
                            Width="120"
                            Height="35"
                            Margin="0,0,10,0"/>
                    <Button Content="Otwórz ZK" 
                            Background="#4CAF50"
                            Click="OpenZKButton_Click"
                            Width="120"
                            Height="35"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>


<Window x:Class="Gryzak.Views.SelectKontrahentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wybierz kontrahenta" 
        Height="500" Width="800"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/gryzak_icon.png">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Wybierz kontrahenta" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Wybierz kontrahenta z listy poniżej" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
            
            <!-- Dane kontrahenta z API -->
            <Border Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12,10" CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Dane kontrahenta z zamówienia:" FontSize="11" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,6"/>
                    <TextBlock Name="CustomerInfoTextBlock" 
                               FontSize="12" 
                               Foreground="#333"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Lista kontrahentów -->
        <DataGrid Name="KontrahenciDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="KontrahenciDataGrid_SelectionChanged"
                  MouseDoubleClick="KontrahenciDataGrid_MouseDoubleClick"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Nazwa pełna" Binding="{Binding NazwaPelna}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="NIP" Binding="{Binding NIP}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Adres" Binding="{Binding Adres}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Miejscowość" Binding="{Binding Miejscowosc}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Kod" Binding="{Binding Kod}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Przyciski -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Przyciski po lewej stronie -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Name="AddButton"
                        Content="Nowy" 
                        Click="AddButton_Click" 
                        Width="100" 
                        Height="35"
                        Margin="5,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Name="EmptyButton"
                        Content="Pusty" 
                        Click="EmptyButton_Click" 
                        Width="100" 
                        Height="35"
                        Margin="5,0"
                        Background="#FF9800"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
            
            <!-- Przyciski po prawej stronie -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="SelectButton" 
                        Content="Wybierz" 
                        Click="SelectButton_Click" 
                        IsDefault="True"
                        Width="100" 
                        Height="35"
                        Margin="5"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="False"/>
                <Button Content="Anuluj" 
                        Click="CancelButton_Click" 
                        IsCancel="True"
                        Width="100" 
                        Height="35"
                        Margin="5"
                        Background="#E0E0E0"
                        Foreground="Black"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>


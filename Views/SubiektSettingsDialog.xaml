<Window x:Class="Gryzak.Views.SubiektSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="锔 Ustawienia Subiekt GT" 
        Height="600" Width="550"
        MinHeight="500" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/gryzak_icon.png">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nag贸wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="锔 Ustawienia Subiekt GT" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Ustawienia logowania do Subiekt GT" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Sekcja: Ustawienia serwera -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Ustawienia serwera MSSQL" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="Adres serwera:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="ServerAddressTextBox"/>
                        
                        <TextBlock Text="Nazwa bazy danych:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="DatabaseNameTextBox"/>
                        
                        <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="ServerUsernameTextBox"/>
                        
                        <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox Name="ServerPasswordBox"/>
                        
                        <Button Name="TestConnectionButton" 
                                Content=" Testuj poczenie" 
                                Click="TestConnectionButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="12,8"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Parametry GT -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Parametry GT" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="U偶ytkownik (Operator):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="UserComboBox" 
                                  IsEditable="True"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="UserName"/>

                        <TextBlock Text="Haso operatora:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox Name="PasswordBox"/>

                        <TextBlock Text="Produkt GT:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="GtProduktComboBox" SelectedValuePath="Tag">
                            <ComboBoxItem Content="1 - Subiekt GT" Tag="1"/>
                            <ComboBoxItem Content="2 - Gestor GT" Tag="2"/>
                            <ComboBoxItem Content="3 - Gratyfikant GT" Tag="3"/>
                            <ComboBoxItem Content="4 - Rachmistrz GT" Tag="4"/>
                            <ComboBoxItem Content="5 - Rewizor GT" Tag="5"/>
                        </ComboBox>

                        <TextBlock Text="Tryb autentykacji SQL:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <ComboBox Name="AuthenticationModeComboBox" SelectedValuePath="Tag">
                            <ComboBoxItem Content="0 - Mieszana (SQL + Windows)" Tag="0"/>
                            <ComboBoxItem Content="1 - Windows" Tag="1"/>
                        </ComboBox>

                        <TextBlock Text="Uruchom - Tryb dopasowania:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <ComboBox Name="LaunchDopasujComboBox" SelectedValuePath="Tag">
                            <ComboBoxItem Content="0 - Dopasuj (serwer/baza)" Tag="0"/>
                            <ComboBoxItem Content="1 - Dopasuj u偶ytkownika SQL" Tag="1"/>
                            <ComboBoxItem Content="2 - Dopasuj operatora GT" Tag="2"/>
                        </ComboBox>

                        <TextBlock Text="Uruchom - Tryb uruchomienia:" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <ComboBox Name="LaunchTrybComboBox" SelectedValuePath="Tag">
                            <ComboBoxItem Content="0 - Standardowy (gtaUruchom)" Tag="0"/>
                            <ComboBoxItem Content="1 - Nie zablokowany (gtaUruchomNieZablokowany)" Tag="1"/>
                            <ComboBoxItem Content="2 - Zawsze nowy (gtaUruchomNowy)" Tag="2"/>
                            <ComboBoxItem Content="4 - W tle (gtaUruchomWTle)" Tag="4"/>
                        </ComboBox>
                        
                        <Button Name="LoadUsersButton" 
                                Content=" Pobierz list u偶ytkownik贸w" 
                                Click="LoadUsersButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#FF9800"
                                Foreground="White"
                                Padding="12,8"/>
                        
                        <Button Name="TestSubiektButton" 
                                Content=" Testuj uruchomienie Subiekta GT" 
                                Click="TestSubiektButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#9C27B0"
                                Foreground="White"
                                Padding="12,8"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Automatyczne zwalnianie licencji -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Automatyczne zwalnianie licencji" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="Czas nieaktywnoci (minuty):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="AutoReleaseLicenseTimeoutTextBox" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="0 = wyczone (licencja nigdy nie bdzie automatycznie zwalniana)" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,-10,0,10"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Ka偶da warto > 0 = licencja zostanie zwolniona po X minutach nieaktywnoci" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,-5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Obliczanie rabatu -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Obliczanie rabatu" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>

                        <TextBlock Text="Spos贸b obliczania rabatu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="DiscountModeComboBox" SelectedValuePath="Tag" Margin="0,0,0,5">
                            <ComboBoxItem Content="Procent" Tag="percent"/>
                            <ComboBoxItem Content="Kwota" Tag="amount"/>
                        </ComboBox>
                        <TextBlock Text="Wybierz, czy rabat ma by interpretowany jako procent ceny netto czy jako kwota brutto." 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Zaokrglanie rabatu -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Zaokrglanie rabatu" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>

                        <TextBlock Text="Spos贸b zaokrglania rabatu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="DiscountRoundingModeComboBox" SelectedValuePath="Tag" Margin="0,0,0,5">
                            <ComboBoxItem Content="Bez zaokrglania" Tag="none"/>
                            <ComboBoxItem Content="Do penych procent贸w (1%)" Tag="percent"/>
                            <ComboBoxItem Content="Do dziesitych czci procenta (0.1%)" Tag="tens"/>
                        </ComboBox>
                        <TextBlock Text="Wybierz, jak rabaty maj by zaokrglane na kocu generowania dokumentu." 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Liczenie dokumentu -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Liczenie dokumentu" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>

                        <TextBlock Text="Spos贸b liczenia dokumentu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="PriceCalculationModeComboBox" SelectedValuePath="Tag" Margin="0,0,0,5">
                            <ComboBoxItem Content="Od cen brutto" Tag="gross"/>
                            <ComboBoxItem Content="Od cen netto" Tag="net"/>
                        </ComboBox>
                        <TextBlock Text="Wybierz, czy dokument ma by liczony od cen brutto czy od cen netto." 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content=" Zapisz" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Anuluj" Click="CancelButton_Click" IsCancel="True" Background="#E0E0E0" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>


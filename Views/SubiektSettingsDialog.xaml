<Window x:Class="Gryzak.Views.SubiektSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="âš™ï¸ Ustawienia Subiekt GT" 
        Height="600" Width="550"
        MinHeight="500" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/gryzak_icon.png">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- NagÅ‚Ã³wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="âš™ï¸ Ustawienia Subiekt GT" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Ustawienia logowania do Subiekt GT" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Sekcja: Ustawienia serwera -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Ustawienia serwera MSSQL" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="Adres serwera:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="ServerAddressTextBox"/>
                        
                        <TextBlock Text="Nazwa bazy danych:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="DatabaseNameTextBox"/>
                        
                        <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="ServerUsernameTextBox"/>
                        
                        <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox Name="ServerPasswordBox"/>
                        
                        <Button Name="TestConnectionButton" 
                                Content="ðŸ”Œ Testuj poÅ‚Ä…czenie" 
                                Click="TestConnectionButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="12,8"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: UÅ¼ytkownik Subiekt GT -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="UÅ¼ytkownik Subiekt GT" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="UÅ¼ytkownik:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="UserComboBox" 
                                  IsEditable="True"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="UserName"/>

                        <TextBlock Text="HasÅ‚o:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox Name="PasswordBox"/>
                        
                        <Button Name="LoadUsersButton" 
                                Content="ðŸ“‹ Pobierz listÄ™ uÅ¼ytkownikÃ³w" 
                                Click="LoadUsersButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#FF9800"
                                Foreground="White"
                                Padding="12,8"/>
                        
                        <Button Name="TestSubiektButton" 
                                Content="ðŸš€ Testuj uruchomienie Subiekta GT" 
                                Click="TestSubiektButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Background="#9C27B0"
                                Foreground="White"
                                Padding="12,8"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Automatyczne zwalnianie licencji -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Automatyczne zwalnianie licencji" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>
                        
                        <TextBlock Text="Czas nieaktywnoÅ›ci (minuty):" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Name="AutoReleaseLicenseTimeoutTextBox" 
                                 PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Text="0 = wyÅ‚Ä…czone (licencja nigdy nie bÄ™dzie automatycznie zwalniana)" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,-10,0,10"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="KaÅ¼da wartoÅ›Ä‡ > 0 = licencja zostanie zwolniona po X minutach nieaktywnoÅ›ci" 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   Margin="0,-5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Obliczanie rabatu -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="15" Margin="0,0,0,20" Background="#F9F9F9">
                    <StackPanel>
                        <TextBlock Text="Obliczanie rabatu" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>

                        <TextBlock Text="SposÃ³b obliczania rabatu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox Name="DiscountModeComboBox" SelectedValuePath="Tag" Margin="0,0,0,5">
                            <ComboBoxItem Content="Procent" Tag="percent"/>
                            <ComboBoxItem Content="Kwota" Tag="amount"/>
                        </ComboBox>
                        <TextBlock Text="Wybierz, czy rabat ma byÄ‡ interpretowany jako procent ceny netto czy jako kwota brutto." 
                                   FontSize="11" 
                                   Foreground="Gray" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="ðŸ’¾ Zapisz" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Anuluj" Click="CancelButton_Click" IsCancel="True" Background="#E0E0E0" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>


<Window x:Class="Gryzak.Views.KorektaWartosciDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Różnica w wartościach - Korekta dokumentu"
        Height="420" Width="600"
        MinHeight="380" MinWidth="550"
        MaxWidth="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/gryzak_icon.png"
        Background="#F5F5F5">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Nagłówek z tłem -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo Gryzak -->
                <Image Grid.Column="0" 
                       Source="pack://application:,,,/gryzak.png" 
                       Width="48" 
                       Height="48" 
                       Margin="0,0,15,0" 
                       VerticalAlignment="Center"/>
                
                <!-- Ikona ostrzeżenia -->
                <Viewbox Grid.Column="1" Width="32" Height="32" Margin="0,0,15,0" VerticalAlignment="Center">
                    <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" 
                          Fill="White"/>
                </Viewbox>
                
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Różnica w wartościach dokumentu" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,3"/>
                    <TextBlock Text="Wykryto różnicę między sumą pozycji ZK a wartością z API" 
                               FontSize="12" 
                               Foreground="#FFF3E0"
                               Opacity="0.95"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Główna zawartość -->
        <Border Grid.Row="1" Background="White" Margin="20,20,20,0" Padding="25" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Name="MessageTextBlock" 
                               TextWrapping="Wrap" 
                               FontSize="13"
                               LineHeight="20"
                               Foreground="#333333"/>
                    
                    <!-- Separator -->
                    <Border Height="1" Background="#E0E0E0" Margin="0,20,0,15"/>
                    
                    <!-- Informacja dodatkowa -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="⚠️ " 
                                   FontSize="14" 
                                   VerticalAlignment="Top" 
                                   Margin="0,2,8,0"/>
                        <TextBlock Grid.Column="1" 
                                   TextWrapping="Wrap" 
                                   FontSize="12" 
                                   Foreground="#666666">
                            <Run Text="Korekta automatycznie dostosuje wartości w dokumencie zgodnie z kolejnością: najpierw koszty (KOSZTY/1, potem KOSZTY/2), a następnie pierwszą pozycję produktową. Wszystkie zmiany zostaną automatycznie przeliczone."/>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Przyciski -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="PozostawButton" 
                        Content="Pozostaw" 
                        Width="120" 
                        Height="38" 
                        Margin="0,0,12,0"
                        Click="PozostawButton_Click"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Padding="15,0"
                        BorderThickness="1"
                        BorderBrush="#CCCCCC"
                        Background="White"
                        Foreground="#333333"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="BorderBrush" Value="#999999"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#EEEEEE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Name="KorygujButton" 
                        Content="Koryguj" 
                        Width="120" 
                        Height="38"
                        Click="KorygujButton_Click"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Padding="15,0"
                        Margin="0,0,12,0"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#3D8B40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Name="AnulujButton" 
                        Content="Anuluj" 
                        Width="120" 
                        Height="38" 
                        Margin="0,0,0,0"
                        Click="AnulujButton_Click"
                        IsCancel="True"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Padding="15,0"
                        BorderThickness="1"
                        BorderBrush="#CCCCCC"
                        Background="#E0E0E0"
                        Foreground="#333333"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D0D0D0"/>
                                    <Setter Property="BorderBrush" Value="#999999"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#C0C0C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>


<Window x:Class="Gryzak.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Border Background="White" CornerRadius="10" BorderBrush="#2196F3" BorderThickness="2" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Grid.Row="0" 
                   Source="pack://application:,,,/gryzak.png" 
                   Width="120" 
                   Height="120" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

            <!-- Tytuł -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="Gryzak" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#2196F3"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Menedżer Zamówień" 
                           FontSize="18" 
                           Foreground="#666"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Wskaźnik ładowania -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,15">
                <ProgressBar Name="LoadingProgressBar" 
                             IsIndeterminate="True" 
                             Width="300" 
                             Height="6" 
                             Margin="0,0,0,10"/>
                <TextBlock Name="LoadingText" 
                           Text="Ładowanie aplikacji..." 
                           FontSize="14" 
                           Foreground="#666"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Pasek postępu -->
            <ProgressBar Name="ProgressBar" 
                         Grid.Row="3" 
                         Width="300" 
                         Height="20" 
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>

            <!-- Informacja o wersji -->
            <TextBlock Grid.Row="4" 
                       Text="Wersja 1.6.0" 
                       FontSize="11" 
                       Foreground="#999"
                       HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>


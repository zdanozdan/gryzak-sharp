<Window x:Class="Gryzak.Views.ConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="锔 Konfiguracja API" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/gryzak_icon.png">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nag贸wek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="锔 Konfiguracja API" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Ustawienia poczenia z API" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <!-- Formularz -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Ustawienia API" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="URL API:" FontWeight="SemiBold"/>
                <TextBox Name="ApiUrlTextBox" TextChanged="ApiUrl_TextChanged"/>
                <TextBlock Text="Wprowad藕 peny URL do API zam贸wie" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                <TextBlock Text="Token API:" FontWeight="SemiBold"/>
                <PasswordBox Name="ApiTokenPasswordBox" PasswordChanged="ApiToken_PasswordChanged"/>
                <TextBlock Text="Token autoryzacji do API" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                <TextBlock Text="Timeout (sekundy):" FontWeight="SemiBold"/>
                <TextBox Name="ApiTimeoutTextBox" TextChanged="ApiTimeout_TextChanged"/>
                <TextBlock Text="Maksymalny czas oczekiwania na odpowied藕 API (5-300)" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                <TextBlock Text="Endpoint listy zam贸wie:" FontWeight="SemiBold"/>
                <TextBox Name="OrderListEndpointTextBox" TextChanged="OrderListEndpoint_TextChanged"/>
                <TextBlock Text="cie偶ka wzgldna do endpointu listy zam贸wie (dodawana do g贸wnego URL)" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>
                <TextBlock Name="OrderListUrlPreview" FontSize="10" Foreground="Blue" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Endpoint szczeg贸贸w zam贸wienia:" FontWeight="SemiBold"/>
                <TextBox Name="OrderDetailsEndpointTextBox" TextChanged="OrderDetailsEndpoint_TextChanged"/>
                <TextBlock Text="cie偶ka wzgldna do endpointu szczeg贸贸w zam贸wienia (mo偶e zawiera {id})" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>
                <TextBlock Name="OrderDetailsUrlPreview" FontSize="10" Foreground="Blue" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <!-- Test poczenia -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="0,20,0,10" Background="#F5F5F5">
                    <StackPanel>
                        <TextBlock Text=" Test poczenia" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Button Name="TestConnectionButton" Content="И Testuj poczenie" Click="TestConnectionButton_Click"/>
                        <TextBlock Name="TestStatusText" Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content=" Resetuj" Click="ResetButton_Click"/>
            <Button Content=" Zapisz konfiguracj" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Anuluj" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

